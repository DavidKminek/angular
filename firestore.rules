rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY DEVELOPMENT RULES
    // These rules allow open read/write access to the database. This is
    // convenient while developing but unsafe for production. Replace with
    // proper auth-based rules before releasing your app.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
